# Development environment variables
CRYPTO_CHECKOUT_ENV=development
CRYPTO_CHECKOUT_LOG_LEVEL=debug
CRYPTO_CHECKOUT_SERVER_HOST=0.0.0.0
CRYPTO_CHECKOUT_SERVER_PORT=8080

# Database configuration (when postgres profile is enabled)
# DATABASE_HOST=postgres
# DATABASE_PORT=5432
# DATABASE_NAME=crypto_checkout
# DATABASE_USER=crypto_user
# DATABASE_PASSWORD=crypto_password
# Or optionally, one-liner DSN:
DATABASE_URL=postgres://crypto_user:crypto_password@postgres:5432/crypto_checkout?sslmode=disable

# Redis configuration (when redis profile is enabled)
REDIS_URL=redis://redis:6379/0

# Application settings
APP_NAME=crypto-checkout
APP_VERSION=dev
