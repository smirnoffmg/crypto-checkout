# Development environment variables
CRYPTO_CHECKOUT_ENV=development
CRYPTO_CHECKOUT_LOG_LEVEL=debug
CRYPTO_CHECKOUT_SERVER_HOST=0.0.0.0
CRYPTO_CHECKOUT_SERVER_PORT=8080

# Database configuration (when postgres profile is enabled)
POSTGRES_DB=crypto_checkout
POSTGRES_USER=crypto_user
POSTGRES_PASSWORD=crypto_password

# Individual database settings (alternative to DATABASE_URL)
CRYPTO_CHECKOUT_DATABASE_HOST=postgres
CRYPTO_CHECKOUT_DATABASE_PORT=5432
CRYPTO_CHECKOUT_DATABASE_DBNAME=crypto_checkout
CRYPTO_CHECKOUT_DATABASE_USER=crypto_user
CRYPTO_CHECKOUT_DATABASE_PASSWORD=crypto_password
CRYPTO_CHECKOUT_DATABASE_SSLMODE=disable

# Or optionally, one-liner DSN:
# CRYPTO_CHECKOUT_DATABASE_URL=postgres://crypto_user:crypto_password@postgres:5432/crypto_checkout?sslmode=disable

# Redis configuration (when redis profile is enabled)
REDIS_URL=redis://redis:6379/0

# Application settings
APP_NAME=crypto-checkout
APP_VERSION=dev
